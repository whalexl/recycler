<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="12dp"
    android:paddingTop="8dp">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/checkbox"
        android:layout_toStartOf="@+id/btn_delete"
        android:textColor="#1e1e1e"
        android:textSize="18sp"
        tools:text="This is a very very long content to test multiple lines display" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/text_content"
        android:layout_below="@id/text_content"
        android:layout_marginTop="4dp"
        android:textColor="#808080"
        android:textSize="14sp"
        tools:text="2019-01-29" />

    <ImageButton
        android:id="@id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_close_gray_24dp" />
    <Button
        android:id="@+id/btn_red"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#F03030"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/text_content"
        android:layout_toEndOf="@id/text_date"
        />
    <Button
        android:id="@+id/btn_white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="#FAFAFA"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/text_content"
        android:layout_toEndOf="@id/btn_red"

        />
    <Button
        android:id="@+id/btn_green"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#86F10C"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/text_content"
        android:layout_toEndOf="@id/btn_white"
        />


</RelativeLayout>